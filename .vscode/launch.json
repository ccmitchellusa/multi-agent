    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Module",
            "type": "debugpy",
            "request": "launch",
            "module": "multi_agent.agent",
            "justMyCode": false,
            "args": [
                "--config",
                "${workspaceFolder}/agent.yaml",
                "--log-level",
                "debug"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}